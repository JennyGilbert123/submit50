#include <cs50.h>
#include <stdio.h>

void print_row(int spaces, int bricks, int n);

int main(void)
{
    // Prompt the user for the pyramid's height
    int n;
    do
    {
        n = get_int("Height: ");
    }
    while (n < 1);

    // Print a pyramid of that height
    for (int i = 0; i < n; i++)
    {
        // Print row of bricks
        print_row(i+1, i+1, n);
    }
    printf("\n");
}

void print_row(int spaces, int bricks, int n)
{
    // Print spaces
    for (int i =n; i > spaces; i--){
        printf(" ");
    }
for (int i =0; i < bricks; i++){
    printf("#");
}
printf("\n");
    // Print bricks
}
